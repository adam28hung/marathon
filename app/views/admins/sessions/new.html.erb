<link href="/css/signin.css" rel="stylesheet">
<br>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
    <h2 class="form-signin-heading">登入</h2>
    <%= f.text_field :email, class: 'form-control', type:"email", id:"inputEmail",placeholder:"Email address", autofocus: true , required: true  %>            
    <%= f.text_field :password, class: 'form-control', placeholder:"Password", required: true, id: 'inputPassword'  %>
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block'  %>
  <% end %>
</div> <!-- /container -->

