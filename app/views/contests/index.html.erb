<link href="/css/contest.css" rel="stylesheet">

<div class="container">
  <div class="col-lg-12">
    
    <table class="table">
      <caption>所有賽事</caption>
      <thead>
        <tr>
          <th>#</th>
          <th><%= sort_link(@q, :name, "比賽名稱") %></th>
          <th><%= sort_link(@q, :place, "舉辦地點") %></th>
        </tr>
      </thead>
      <tbody>
        <% @contests.each_with_index do |contest, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= link_to(contest.name, contest_path(contest)) %></td>
            <td><%= contest.place %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @contests %>
  </div>
</div>