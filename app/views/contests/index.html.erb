<% content_for :title do %>
  所有賽事
<% end %>
<% content_for :meta_area do %>
  <meta property="og:title" content='<%= full_title(yield(:title)) %>'>
<% end %>
<br>
<%= render 'search_contest_name' %>
<br>
<div class="container">
  <div class="col-mg-12">
    
    <table class="table">
      <!-- <caption>所有賽事</caption> -->
      <thead>
        <tr>
          <th><%= sort_link(@q, :name, "比賽名稱") %></th>
          <th><%= sort_link(@q, :place, "舉辦地點") %></th>
          <th><%= sort_link(@q, :event_date, "日期") %></th>
        </tr>
      </thead>
      <tbody>
        
          <% @contests.each do |contest| %>
            
              <tr>
                <td><%= link_to(contest.name, contest_path(contest)) %></td>
                <td> <%= contest.place %></td>
                <td> <%= contest.event_date.strftime('%F') %></td>
                <script type="application/ld+json">
                {
                  "@context": "http://schema.org",
                  "@type": "Event",
                  "name": "<%= contest.name %>",
                  "startDate" : "<%= contest.event_date.strftime('%F') %>",
                  "url": "<%= contest_url(contest) %>",
                  "location" : {
                    "@type" : "Place",
                    "sameAs" : "",
                    "name" : "<%= contest.place %>",
                    "address" : "<%= contest.place %>"
                  }
                }
                </script>
              </tr>
            
          <% end %>
        
      </tbody>
    </table>

    <%= paginate @contests %>
  </div>
</div>
<style>body{padding-top:70px;background-color:#fff}.thumb{margin-bottom:30px}footer{margin:50px 0}</style>