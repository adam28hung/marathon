<br>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-mg-12  col-lg-offset-3 text-center">
      <%= search_form_for @q, url: sort_contests_path, method: :post  do |f| %>
        <div class="input-group">
          <%= f.search_field :name_cont, class: 'form-control',placeholder: "比賽名稱..." %>
          <span class="input-group-btn">
            <%= f.submit('搜尋', class: "btn btn-primary") %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="col-mg-12">
    <table class="table">
      <!-- <caption>所有賽事</caption> -->
      <thead>
        <tr>
          <th><%= sort_link(@q, :name, "比賽名稱") %></th>
          <th><%= sort_link(@q, :place, "舉辦地點") %></th>
          <th><%= sort_link(@q, :event_date, "日期") %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'index_contests', collection: @contests, as: :contest %>
      </tbody>
    </table>

    <%= paginate @contests %>
  </div>
</div>
<style>body{padding-top:70px;background-color:#fff}.thumb{margin-bottom:30px}footer{margin:50px 0}</style>
